<Window x:Class="_7._2._2.WorkWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:_7._2._2"
    mc:Ignorable="d"
    Title="Work" Height="250" Width="300">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF7100FF" Offset="0.996"/>
            <GradientStop Color="#FF0800FF" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Translated word:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,15,0,0" Grid.Column="1" Height="16" Width="87" Foreground="White"/>
        <Label x:Name="LabelText" Content="Label" HorizontalAlignment="Left" Margin="8,31,0,0" VerticalAlignment="Top" Width="280" Grid.Column="1" Height="60" Foreground="White"/>
    </Grid>
</Window>
