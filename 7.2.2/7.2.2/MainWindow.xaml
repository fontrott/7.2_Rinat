<Window x:Class="_7._2._2.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:_7._2._2"
    mc:Ignorable="d"
    Title="MainWindow" Height="250" Width="300">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF0800FF"/>
            <GradientStop Color="#FF6D1AEC" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,17,0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="259*"/>
            <ColumnDefinition Width="41*"/>
        </Grid.ColumnDefinitions>
        <Menu Margin="1,-12,1,185" Grid.ColumnSpan="2" Background="#FF2407FA">
            <MenuItem Header="Begin" Click="Begin_Click" Foreground="White"/>
            <MenuItem Header="Work" Click="Work_Click" Foreground="White"/>
            <MenuItem Header="About" Click="About_Click" Foreground="White"/>
        </Menu>
    </Grid>
</Window>
